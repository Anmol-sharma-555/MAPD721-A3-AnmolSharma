<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MAPD721A3AnmolSharma"
        tools:targetApi="31">
        <activity
            android:name=".ExitAnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_exit_animation"
            android:theme="@style/Theme.MAPD721A3AnmolSharma" />
        <activity
            android:name=".InfiniteAnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_infinite_animation"
            android:theme="@style/Theme.MAPD721A3AnmolSharma" />
        <activity
            android:name=".ScaleAnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_scale_animation"
            android:theme="@style/Theme.MAPD721A3AnmolSharma" />
        <activity
            android:name=".TransitionAnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_transition_animation"
            android:theme="@style/Theme.MAPD721A3AnmolSharma" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MAPD721A3AnmolSharma">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>